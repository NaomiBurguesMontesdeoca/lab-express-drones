<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Create a new dron</h2>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Name</label>
                    <input type="text" class="form-control" id="title" name="name">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="description" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Max Speed</label>
                    <input type="number" class="form-control" id="author" name="maxSpeed">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create dron</button>
                </div>
            </form>
        </div>
    </div>